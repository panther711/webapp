{
  "name": "tinode-webapp",
  "description": "Tinode messenger for the web",
  "version": "0.17.0-rc1",
  "repository": {
    "type": "git",
    "url": "https://github.com/tinode/example-react-js.git"
  },
  "scripts": {
    "build": "npm run vers && npm run build:css && npm run extract && npm run build:i18n && npm run build:prod && npm run build:dev",
    "build:css": "postcss css/base.css > css/base.min.css",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:i18n": "node scripts/pack-messages.js",
    "vers": "node scripts/gen-version.js",
    "extract": "formatjs extract src/**/*.jsx --out-file src/i18n/ex/base-en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile": "formatjs compile"
  },
  "browserslist": "> 0.5%, not IE 11",
  "files": [
    "src/index.js",
    "src/config.js",
    "src/views/*.jsx",
    "src/widgets/*.jsx",
    "src/lib/*.js",
    "src/i18n/*.json",
    "umd/index.prod.js",
    "umd/index.prod.js.map",
    "umd/index.dev.js",
    "umd/index.dev.js.map",
    "umd/tinode.prod.js",
    "umd/tinode.dev.js",
    "audio/msg.mp3",
    "css/base.css",
    "css/base.min.css",
    "img/*.png",
    "img/*.svg",
    "img/*.jpeg",
    "index-dev.html",
    "index.html",
    "manifest.json",
    "service-worker.js",
    "firebase-init.js"
  ],
  "keywords": [
    "chat",
    "instant-messenger",
    "message",
    "messenger",
    "react",
    "web"
  ],
  "locales": [
    "de",
    "en",
    "es",
    "ko",
    "ro",
    "ru",
    "zh"
  ],
  "main": "umd/index.prod.js",
  "bugs": {
    "url": "https://github.com/tinode/example-react-js/issues"
  },
  "homepage": "https://github.com/tinode/chat",
  "email": "info@tinode.co",
  "author": "Tinode Authors <info@tinode.co>",
  "license": "Apache-2.0",
  "dependencies": {
    "firebase": "^8.2.9",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-intl": "^5.13.1",
    "tinode-sdk": "^0.17.0-rc1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.8",
    "@babel/preset-react": "^7.12.13",
    "@formatjs/cli": "^4.2.6",
    "babel-loader": "^8.2.2",
    "babel-plugin-formatjs": "^10.2.6",
    "browserslist": "^4.16.3",
    "copy-webpack-plugin": "^8.1.0",
    "cssnano": "^4.1.10",
    "glob": "^7.1.6",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0"
  }
}
